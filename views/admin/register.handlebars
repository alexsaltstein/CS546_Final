<h1 class="welcome"> Welcome to Flyer Creater </h1>


<fieldset class="reg-fields" >
  <legend> Make a Flyer Creator Account </legend>
<form action="/register" method="POST" id="register-form">
  <div>
    <label for="email">Email</label>
    <input type="email" id="email" name="email">
    <input type="hidden" id="checkUsername" value="">
  </div>
  <br>
  <div>
    <label for="password">Password</label>
    <input type="password" id="password" name="password">
  </div>
  <br>
  <div>
    <label for="checkPassword">Check password</label>
    <input type="password" id="repassword" name="repassword">
    <input type="hidden" id="checkpassword" value="">
  </div>
  <br>
  <div>
    <label for="firstName">First name</label>
    <input type="text" id="firstName" name="firstName">
  </div>
  <br>
  <div>
    <label for="lastName">Last name</label>
    <input type="text" id="lastName" name="lastName">
  </div>
  </fieldset>
  <br> 
  <button type="submit">register</button>
</form>
 <p> Already have an account? <a href="/login"> Login</a></p>
